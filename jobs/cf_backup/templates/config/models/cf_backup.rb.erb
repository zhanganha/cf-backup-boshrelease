Model.new(:cf_backup, 'Description for cf_backup') do

  ##
  # PostgreSQL [Database]
  #
  <% [p("ccdb_ng"), p("uaadb")].each do |db| %>
  <% name = db["databases"][0]["name"] %>
  database PostgreSQL, :<%= name %> do |db|
    db.name               = '<%= name %>'
    db.username           = '<%= db["roles"][0]["name"] %>'
    db.password           = '<%= db["roles"][0]["password"] %>'
    db.host               = '<%= db["address"] %>'
    db.port               = <%= db["port"] %>
  end
  <% end %>

  ##
  # Gzip [Compressor]
  #
  compress_with Gzip

  store_with Local

end
